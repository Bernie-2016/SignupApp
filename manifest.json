{
  "name": "Signup App",
  "description": "App for users to sign up for Bernie Sanders mailings.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": { "16": "img/icon-16.png", "64": "img/icon-64.png", "128": "img/icon-128.png" },
  "kiosk_enabled" : true,
  "kiosk_only" : true,
  "permissions": [
    "fileSystem",
    "syncFileSystem",
    "unlimitedStorage"
  ]
}
